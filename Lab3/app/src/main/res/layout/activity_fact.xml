<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fact_activity">

    <ImageView
        android:id="@+id/imageView_factActivity"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="87dp"
        app:layout_constraintBottom_toTopOf="@+id/fact_textView"
        android:layout_marginLeft="100dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/fact_textView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="51dp"
        android:layout_marginTop="200dp"
        android:text="@string/textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_factActivity" />
</LinearLayout>