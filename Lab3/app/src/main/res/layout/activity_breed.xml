<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".breed_activity">

    <Button
        android:id="@+id/breed_button_1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="246dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="16dp"
        android:onClick="fact_button"
        android:text="@string/button"
        app:layout_constraintBottom_toTopOf="@+id/breed_button_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/breed_button_2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="16dp"
        android:onClick="fact_button"
        android:text="@string/button_breed2"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breed_button_1" />

    <Button
        android:id="@+id/breed_button_3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="257dp"
        android:onClick="fact_button"
        android:text="@string/button_breed3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breed_button_2" />
</LinearLayout>