<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:background="#5E8FB6"
    tools:context=".FighterFragment">

    <ImageView
        android:id="@+id/imageView_fighterfragment"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|center"
        android:background="#A289CD"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_fighterfragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewResult_fighterfragment"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:rotation="-35"
        android:text="TextView"
        android:textColor="#F1EDED"
        android:textSize="48sp" />
</FrameLayout>